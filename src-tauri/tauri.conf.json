{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ideas",
  "version": "1.0.0",
  "identifier": "com.ideas.app",
  "build": {
    "beforeDevCommand": "npm run dev:client",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../client/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ideas",
        "width": 900,
        "height": 670,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "../server": "server"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
